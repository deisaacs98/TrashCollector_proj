@model TrashCollector.Models.Customer

@{
    ViewData["Title"] = "Suspend";
    Layout = "_CustomerLayout";
}

<h1>Change Service</h1>

<h4>You can change your regular pickup day or suspend service</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Suspend">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="RegularPickupDay" class="control-label"></label>
                <select asp-for="RegularPickupDay" class="form-select">
                    <option selected>Select Day of Week</option>
                    <option value="0">Sunday</option>
                    <option value="1">Monday</option>
                    <option value="2">Tuesday</option>
                    <option value="3">Wednesday</option>
                    <option value="4">Thursday</option>
                    <option value="5">Friday</option>
                    <option value="6">Saturday</option>
                </select>
                <span asp-validation-for="RegularPickupDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SuspendStartDate" class="control-label"></label>
                <input asp-for="SuspendStartDate" class="form-control" />
                <span asp-validation-for="SuspendStartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SuspendEndDate" class="control-label"></label>
                <input asp-for="SuspendEndDate" class="form-control" />
                <span asp-validation-for="SuspendEndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
